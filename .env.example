# Flask Configuration
SECRET_KEY=your-secret-key-here-use-random-string
FLASK_CONFIG=development
DATABASE_URL=sqlite:///instance/cloudburst_saas.db

# Weather API Keys
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweathermap-api-key-here

# Get from: https://www.weatherapi.com/
WEATHERAPI_COM_KEY=your-weatherapi-com-key-here

# Email Configuration (Gmail example)
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here

# Database Password (for production PostgreSQL)
DB_PASSWORD=your-secure-database-password

# Redis Password (for production Celery workers)
REDIS_PASSWORD=your-secure-redis-password

# Admin Access
ADMIN_PASSWORD=your-secure-admin-password

# Optional: India Meteorological Department API Key
# IMD_API_KEY=your-imd-api-key-if-available
